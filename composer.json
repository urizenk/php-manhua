{
    "name": "manga/php-manhua",
    "description": "PHP漫画资源管理系统",
    "type": "project",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-unit": "phpunit --testsuite Unit",
        "test-api": "phpunit --testsuite API",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}
